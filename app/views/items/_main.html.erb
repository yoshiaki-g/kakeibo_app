<div class="header">
  <div class="left-header">
    <div class="header-title">
      <%= Date.current.strftime('%Y年 %m月 %d日') %>
    </div>
  </div>
  <div class="right-header">
    <div class="signed-button">
      <% if user_signed_in? %>
          <div class="button">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"header-button" %>
          </div>
        <% else %>
          <div class="button">
            <div class="header-button">
              <%= link_to "ログイン", new_user_session_path%>
            </div>
            <div class="header-button">
              <%= link_to "新規登録", new_user_registration_path%>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>

